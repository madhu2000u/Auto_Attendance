<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="1.25"
        android:id="@+id/attendance_rv_item_ll2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/att_subcode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="CLPC12"
            android:textColor="@color/black"
            android:textSize="29sp" />

        <TextView
            android:id="@+id/att_subname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Process Calculations"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/att_profname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Dr.N Anantharaman"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:backgroundTint="#E6E6E6"
        app:cardCornerRadius="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/att_curr_percentage_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="87%"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="45sp" />

                <TextView
                    android:id="@+id/att_classes_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="30/36"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:layout_marginHorizontal="4dp"
                    android:id="@+id/att_mark_present_imgv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_presentclass_24dp" />

                <Button
                    android:layout_marginHorizontal="4dp"
                    android:id="@+id/att_mark_noclass_imgv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_noclass_24dp" />

                <Button
                    android:layout_marginHorizontal="4dp"
                    android:id="@+id/att_mark_absent_imgv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_absentclass_24dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>